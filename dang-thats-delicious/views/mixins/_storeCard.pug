mixin storeCard(store = {})
  .store
    .store__hero
      .store__actions
        //- // console.log(store.author)
        if user && store.author.equals(user._id) // only display the edit pencil if the user matches the stores owner/user_id // see number 29, last 2 minutes about having admin users
          .store__action.store__action--edit
            a(href=`/stores/${store._id}/edit`)
              != h.icon('pencil')
            // ^ this accesses helpers.js line 18 for inserting an SVG icon
      img(src=`/uploads/${store.photo || 'store.png'}`)
      h2.title
        a(href=`/store/${store.slug}`) #{store.name}
    .store__description
      p= store.description.split(' ').slice(0, 25).join(' ')
      // preventing a really long text description; this breaks up description into array, only takes the first 25 works, and then joins back together
